<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/movie"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/movie"
        android:supportsRtl="true"
        tools:targetApi="31"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">

        <activity
            android:name=".activity.DetallePeliculaActivity"
            android:exported="false" />

        <activity
            android:name=".MainScreenActivity"
            android:exported="false" />

        <activity
            android:name=".activity.MediaActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".activity.SeleccionTipoActivity"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.PeliculasFavoritasActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.PeliculasParaVerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.DetalleSerieActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.SeriesFavoritasActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.SeriesParaVerActivity"
            android:theme="@style/AppTheme.NoActionBar" />


    </application>

</manifest>
