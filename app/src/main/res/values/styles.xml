<resources>

    <!-- Tema personalizado para la aplicaciÃ³n -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/padding_large</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">

    </style>
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="qver.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">#000000</item> <!-- Fondo negro -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
